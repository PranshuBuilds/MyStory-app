<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/pp3"
    android:orientation="vertical"
    tools:context=".WriteActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColorHint="@color/pp3"
        android:textColor="@color/white"
        android:background="@drawable/circle_background"
        android:padding="12dp"
        android:gravity="center"
        android:hint="Enter Title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Select Genre : "
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/genreSpinner"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:autofillHints="genre"
            android:layout_height="wrap_content"
            android:entries="@array/genres" />
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/placeholder"
        android:id="@+id/imageselect"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/discription"
        android:layout_weight="1"
        android:lineSpacingExtra="1px"
        android:gravity="top"
        android:padding="12dp"
        android:background="@drawable/circle_background"
        android:hint="Write Your Story"
        android:textColor="@color/lygrey"
        android:textColorHint="@color/pp3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate story"
            android:backgroundTint="@color/white"
            android:textColor="@color/pp5"
            android:layout_marginEnd="10dp"
            android:id="@+id/generatebutton"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLOAd"
            android:backgroundTint="@color/white"
            android:textColor="@color/pp5"
            android:id="@+id/uploadbutton"/>

    </LinearLayout>



</LinearLayout>